datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  ADMIN
}

model Users {
  email    String  @id @unique
  name     String? @db.VarChar(255)
  role     String  @default("USER") @db.VarChar(255) //enforce a specific length constraint
  password String?
  code     Codes?
}

model Codes {
  email String @unique
  code  Int
  user  Users  @relation(fields: [email], references: [email])

  @@map("users")
}
