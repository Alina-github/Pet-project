datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  ADMIN
}

model User {
  id       String  @id @unique @default(cuid()) // Primary key
  email    String  @unique
  name     String? @db.VarChar(255)
  role     String  @default("USER") @db.VarChar(255)
  password String?
  codes    Code[]

  @@map("users")
}

model Code {
  userId String
  email  String
  code   Int

  user User @relation(fields: [userId], references: [id])

  @@id([email, code]) // Composite primary key
  @@map("codes")
}
